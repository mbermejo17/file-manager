    meta(name="viewport" content="width=device-width, initial-scale=1.0")
  body.atos
    #loader.progress
      .indeterminate
    #waiting.conatainer.preloader-wrapper.big
      .spinner-layer.spinner-blue-only
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle  
    .indigo-text.page-title.center File Manager
    .row(style="width: 100%")
      .z-depth-1.grey.lighten-4.col.l4.center
          form#formLogon.col.l12.center
            .row
              .col.l8
                h5.indigo-text User Logon
            .row
              .input-field.col.l8
                i.prefix.material-icons person
                input#username.validate(type="text" name="username")
                label(for="username") Enter your name
            .row
              .input-field.col.l8
                i.material-icons.prefix lock
                input#password.validate(type="password" name="password")
                label(for="password") Enter your password
            br
            .row.center
              button#login-button.btn.waves-teal.btn-flat.btn-unify.center(type="submit" name="btn_login") Login
    .section
    .section
