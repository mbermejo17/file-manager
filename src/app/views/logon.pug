doctype html
html(lang="es")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    // Import Google Icon Font
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    // Import materialize.css
    // <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    link(type="text/css" rel="stylesheet" href="css/style.css" media="screen,projection")
    // Let browser know website is optimized for mobile
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
  body.atos
    #loader.progress
      .indeterminate
    #waiting.preloader-wrapper.big
      .spinner-layer.spinner-blue-only
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle  
    main#main(style="display:none")
      center
        .img-logo
          // <img class="responsive-img" src="img/atos_logo_0.png" />
        .indigo-text.page-title File Manager
        .container
        .container
          .z-depth-1.grey.lighten-4.row(style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;")
            form#formLogon.col.s12(method="post")
              .row
                .col.s12
                  h5.indigo-text User Logon
              .row
                .input-field.col.s12
                  i.prefix.material-icons person
                  input#username.validate(type="text" name="username")
                  label(for="username") Enter your name
              .row
                .input-field.col.s12
                  i.material-icons.prefix lock
                  input#password.validate(type="password" name="password")
                  label(for="password") Enter your password
                label(style="float: right;")
                  a.pink-text(href="#!")
                    b Forgot Password?
              br
              center
                .row
                  button#login-button.col.s12.btn.btn-large.waves-effect.indigo(type="submit" name="btn_login") Login
        a(href="#!") Create account
      .section
      .section
    script(type="text/javascript" src="js/materialize.min.js")
    script(type="text/javascript" src="js/logon.js")
