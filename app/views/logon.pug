doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Logon
    link(type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection")
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="css/font-awesome.min.css")
    link(type="text/css" rel="stylesheet" href="css/style.css" media="screen,projection")
    link(rel="shortcut icon" href="/favicon.ico")
    link(rel="shortcut icon" href="/favicon_64.png")
  body
    #bar-preloader.bar-preloader-container
      .bar-preloader
    .row.head-container
      .container
        .col.m3.logo
          // <img src="img/logo_brand.png" alt="Unify Home">
        .col.m12.center.title
          | File Manager
        .col.m3.status.right
    .row.nav-unify
    .row
      br
    .row.logon-container
      .card-panel
        h4.header2 User logon
        br
        .row
          form#formLogon.col.s12.m6.l8
            .row
              .input-field.col.s12
                input#username(type="text",autocomplete="off")
                label(for="username") Name
            .row
              .input-field.col.s12
                input#password(type="password",autocomplete="off").toggle-password
                label#passwdLabel(for="password") Password
                span#password-field.fa.fa-fw.fa-eye.field-icon.toggle-password
            .row
              br
              .input-field.col.s6.m6
              .input-field.col.s12.m12
                button#login-button.waves-effect.waves-teal.btn-flat.btn2-unify.right(type="submit" name="action")
                  | Logon
    .footer-unify
      .container
        .col.m6.left
          // <img src="img/logo_brand.png" alt="">
        .col.m6.right
          // <h5 class="unify-text right">Â© Unify Inc. 2018</h5>
    #loader(style="display:none")
    #waiting.preloader-wrapper
      .spinner-layer.spinner-blue-only
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle      
    script(type="text/javascript" src="js/materialize.min.js")
    script(type="text/javascript" src="js/logon.js")
