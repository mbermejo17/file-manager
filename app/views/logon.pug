    .row
      br
    .row.logon-container
      .card-panel
        h4.header2 User logon
        br
        .row
          form#formLogon.col.s12.m6.l8
            .row
              .input-field.col.s12
                input#username(type="text")
                label(for="username") Name
            .row
              .input-field.col.s12
                input#password(type="password",autocomplete="off")
                label(for="password") Password
            .row
              br
              .input-field.col.s6.m6
                #waiting.spinner-layer.spinner-green(style="display:none")
              .input-field.col.s12.m12
                button#login-button.waves-effect.waves-teal.btn-flat.btn2-unify.right(type="submit" name="action")
                  | Logon
    .footer-unify
      .container
        .col.m6.left
